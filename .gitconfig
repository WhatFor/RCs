# Configure Delta;
#May need to install delta via a package manager: https://dandavison.github.io/delta/installation.html
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
	  line-numbers = true
	  side-by-side = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
